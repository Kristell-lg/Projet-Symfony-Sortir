{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} | Identification {% endblock %}

{% block body %}
    <main>
        <form class="general" method="post">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}
            {% if app.user %}
                <div class="mb-3">
                    Vous êtes connecté à l'adresse mail suivante : {{ app.user.userIdentifier }}, <a
                            href="{{ path('app_logout') }}">Logout</a>
                </div>
            {% endif %}

            <h1 class="h3 mb-3 font-weight-normal">Identification pour acceder à la gestion de profil</h1>
            <label for="inputEmail">
                Email
            </label>

            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="" required
                   autofocus>
            <label for="inputPassword">
                Mot de passe
            </label>
            <input type="password" name="password" id="inputPassword" class="form-control"
                   autocomplete="" required>
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
            </div>

            <button class="btn btn-lg btn-primary" type="submit">
                <a href="{{ path('user_edit',{'id':app.user.id}) }}">
                    Modifier le profil !
                </a>
            </button>

        </form>
    </main>

{% endblock %}