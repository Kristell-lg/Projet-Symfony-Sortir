{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} | Modifier le profil{% endblock %}

{% block body %}
    <main>
        <div class="generalBig">

            <h1>Editer son profil</h1>

            {{ form_start(registrationForm) }}
            <div class="column">
                <div class="col1">

                    {{ form_row(registrationForm.nom) }}
                    {{ form_row(registrationForm.prenom) }}
                    {{ form_row(registrationForm.email) }}
                    {{ form_row(registrationForm.telephone) }}
                </div>

                <div class="col2">
                    {{ form_row(registrationForm.campus) }}
                    {{ form_row(registrationForm.password) }}

                    {% if participant.images is not empty %}
                        <p>Photo de profil actuelle :</p>
                        <img  class="pp" src="{{ asset('uploads/'~participant.images.name) }}" alt="photo {{ participant.nom }}">
                        <a href="{{ path('user_gestion_image', {'id':participant.images.id}) }}">Supprimer la photo de profil</a>
                    {% endif %}

                    {{ form_row(registrationForm.image) }}
                    <button class="btn btn-primary btn-lg btn-block" type="submit">Modifier le profil</button>
                    {{ form_end(registrationForm) }}

                </div>
            </div>
        </div>
    </main>
{% endblock %}